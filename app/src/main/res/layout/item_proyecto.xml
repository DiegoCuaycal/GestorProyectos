<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="#B09E99"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Información del proyecto -->
        <TextView
            android:id="@+id/tvNombreProyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Proyecto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción breve del proyecto"
            android:textSize="14sp"
            android:textColor="#6D4C41"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvFechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025-08-01 → 2025-09-01"
            android:textSize="13sp"
            android:textColor="#8A8A8A"
            android:layout_marginBottom="12dp" />

        <!-- Barra de progreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progressAvance"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="12dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#4CAF50"
                android:backgroundTint="#E0E0E0" />

            <TextView
                android:id="@+id/tvPorcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="13sp"
                android:textColor="#388E3C"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Botón actividades + botones acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Botón Actividades -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIrActividades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Actividades"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                app:cornerRadius="20dp"
                app:backgroundTint="#2196F3"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp" />

            <!-- Separador flexible -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Botones acción -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnVer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_view"
                    app:tint="#B09E99"
                    android:contentDescription="@string/ver"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:padding="8dp" />

                <ImageButton
                    android:id="@+id/btnEditar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_edit"
                    app:tint="#B09E99"
                    android:contentDescription="@string/editar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:padding="8dp" />

                <ImageButton
                    android:id="@+id/btnEliminar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_delete"
                    app:tint="#B09E99"
                    android:contentDescription="@string/eliminar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>




