<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#B09E99"
    app:strokeWidth="1dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre -->
        <TextView
            android:id="@+id/tvNombreActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Actividad"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginBottom="4dp" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/tvDescripcionActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción de la actividad"
            android:textSize="14sp"
            android:textColor="#6D4C41"
            android:layout_marginBottom="6dp" />

        <!-- Fechas -->
        <TextView
            android:id="@+id/tvFechasActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2024-07-25 → 2024-07-28"
            android:textSize="13sp"
            android:textColor="#8A8A8A"
            android:layout_marginBottom="4dp" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstadoActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Planificado"
            android:textSize="13sp"
            android:textColor="#00796B"
            android:layout_marginBottom="8dp" />

        <!-- Botones de acción alineados a la derecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnCambiarEstadoActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person"
                android:contentDescription="Cambiar estado"
                android:background="@null"
                android:padding="8dp"
                app:tint="#B09E99" />

            <ImageButton
                android:id="@+id/btnEditarActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:contentDescription="Editar"
                android:background="@null"
                android:padding="8dp"
                app:tint="#B09E99" />

            <ImageButton
                android:id="@+id/btnEliminarActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:contentDescription="Eliminar"
                android:background="@null"
                android:padding="8dp"
                app:tint="#B09E99" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


